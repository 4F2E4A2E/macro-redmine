    <property>
      <code>{{velocity}}&#xd;
        $xwiki.ssfx.use("js/xwiki/table/table.css")&#xd;
        $xwiki.jsfx.use("js/xwiki/table/tablefilterNsort.js", true)&#xd;
        {{/velocity}}&#xd;
        &#xd;
        {{groovy}}&#xd;
        &#xd;
        import groovy.json.*&#xd;
        &#xd;
        &#xd;
        &#xd;
        def wikiname = doc.getDocument().getWikiName()&#xd;
        def customObject =
        xwiki.getDocument("$wikiname:RedmineMacro.RedmineMacroConfiguration").getObject("$wikiname:RedmineMacro.RedmineMacroConfigurationClass")&#xd;
        &#xd;
        if(null == customObject){&#xd;
        wikiname = "xwiki"&#xd;
        customObject =&#xd;
        xwiki.getDocument("$wikiname:RedmineMacro.RedmineMacroConfiguration").getObject("$wikiname:RedmineMacro.RedmineMacroConfigurationClass")&#xd;
        }&#xd;
        &#xd;
        &#xd;
        def defaultUrl = customObject.getProperty("redmineUrl").value&#xd;
        def redmineKey =
        "key=".concat(customObject.getProperty("redmineUserApiKey").value)&#xd;
        def params =
        "$xcontext.macro.params.params".replaceAll('issues', 'issues.json')&#xd;
        &#xd;
        def closedStatusValue = "5"&#xd;
        def tableSortableCfg = "(% class=\"sortable filterable doOddEven\" id=\"redmineMacro\" %)"&#xd;
        def tableHeader =
        "(% class=\"sortHeader\" %)|= ID |= Tracker |= Status |= Thema "&#xd;
        def issueUrls = [] as ArrayList&#xd;
        def
        issueList = [] as ArrayList&#xd;
        &#xd;
        &#xd;
        try {&#xd;
        &#xd;
        if(params.contains("?") &amp;&amp; params.contains("http")){&#xd;
        redmineQuery = params.concat("&amp;").concat(redmineKey)&#xd;
        def root = new JsonSlurper().parseText(redmineQuery.toURL().text)&#xd;
        root.issues.each() { issue -> issueList.add(issue) }&#xd;
        println tableSortableCfg&#xd;
        }else{&#xd;
        params = params.replaceAll(" ", "")&#xd;
        for(issueNumber in params.split(",")) {&#xd;
        def issueUrl = defaultUrl.concat("/issues/".concat(issueNumber).concat(".json").concat("?").concat(redmineKey))&#xd;
        def root = new JsonSlurper().parseText(issueUrl.toURL().text)&#xd;
        issueList.add(root.issue)&#xd;
        }&#xd;
        }&#xd;
        &#xd;
        &#xd;
        println tableHeader&#xd;
        for(issue in issueList) {&#xd;
        if(closedStatusValue.equalsIgnoreCase("${issue.status.id}")) {&#xd;
        println "| --[[#${issue.id}>>url:$defaultUrl/issues/${issue.id}|]]-- | --{{{ ${issue.tracker.name} }}}-- | --{{{
        ${issue.status.name} }}}-- | --{{{ ${issue.subject} }}}--"&#xd;
        }else {&#xd;
        println "| [[#${issue.id}>>url:$defaultUrl/issues/${issue.id}|]] | {{{ ${issue.tracker.name} }}} | {{{ ${issue.status.name}
        }}} | {{{ ${issue.subject} }}}"&#xd;
        }&#xd;
        }&#xd;
        } catch( Exception e ){&#xd;
        println "Something went wrong. Please contact the developer."&#xd;
        println "{{error}} {{{ $e }}} {{/error}}"&#xd;
        }&#xd;
        &#xd;
        &#xd;
        {{/groovy}}
