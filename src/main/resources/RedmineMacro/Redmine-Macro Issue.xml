{{groovy}}

import groovy.json.*

def wikiname = doc.getDocument().getWikiName()
def customObject = xwiki.getDocument("$wikiname:Redmine-Macro.RedmineMacroConfiguration").getObject("$wikiname:Redmine-Macro.RedmineMacroConfigurationClass")

if(null == customObject){
  wikiname = "xwiki"
  customObject = xwiki.getDocument("$wikiname:Redmine-Macro.RedmineMacroConfiguration").getObject("$wikiname:Redmine-Macro.RedmineMacroConfigurationClass")
}

def redmineKeyValue = "key=".concat(customObject.getProperty("redmineUserApiKey").value)
def defaultUrl = customObject.getProperty("redmineUrl").value

def redmineUrl = defaultUrl.concat("/issues/issueNumber.json").concat("?").concat(redmineKeyValue)
def url = ""
def root = null
def issuesList = "$xcontext.macro.params.issues".replaceAll(" ", "")

issuesList = issuesList.split(",")

println "|= ID |= Tracker |= Status |= Thema "

try {

	for (issueNumber in issuesList) {

		url = redmineUrl.replace("issueNumber", issueNumber)

		try{
			root = new JsonSlurper().parseText(url.toURL().text)
			if("5".equalsIgnoreCase("${root.issue.status.id}")) {
				println "| --[[#${root.issue.id}&gt;&gt;url:$defaultUrl/issues/${root.issue.id}]]-- | --{{{ ${root.issue.tracker.name} }}}-- | --{{{ ${root.issue.status.name} }}}-- | --{{{ ${root.issue.subject} }}}--"
			}else {
				println "| [[#${root.issue.id}&gt;&gt;url:$defaultUrl/issues/${root.issue.id}]] | {{{ ${root.issue.tracker.name} }}} | {{{ ${root.issue.status.name} }}} | {{{ ${root.issue.subject} }}}"
			}

		} catch( FileNotFoundException e ) {
			println "| {{{ $issueNumber }}} | {{{ - }}} | {{{ - }}} | {{{ - }}}"
		}
	}
} catch( Exception e ) {
	println "Something went wrong. Please contact the developer."
	println "{{error}} {{{ $e }}} {{/error}}"
}

