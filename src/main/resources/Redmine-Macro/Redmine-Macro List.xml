$xwiki.ssfx.use("js/xwiki/table/table.css")
$xwiki.jsfx.use("js/xwiki/table/tablefilterNsort.js", true)
{{/velocity}}

{{groovy}}

import groovy.json.*


def customObject = xwiki.getDocument("Redmine-Macro.RedmineMacroConfiguration").getObject("Redmine-Macro.RedmineMacroConfigurationClass")

def ticketRedmine = customObject.getProperty("redmineUrl").value
def redmineKeyValue = customObject.getProperty("redmineUserApiKey").value

def redmineKeyParam = "key"
def redmineKey = redmineKeyParam + "=" + redmineKeyValue 

def redmineKeyValueMsg = "&lt;redmineApiUserKey&gt;"

try {

def defaultUrl = "$xcontext.macro.params.ticketRedmineListUrl"
defaultUrl = "$defaultUrl".replaceAll('issues', 'issues.json')

def url = ""
if(defaultUrl.contains("?")){
  url = defaultUrl + "&amp;" + redmineKey
}else{
  url = defaultUrl + "?" + redmineKey
}

def root = new JsonSlurper().parseText(url.toURL().text)

println "(% class=\"sortable filterable doOddEven\" id=\"ticketListRedmine\" %)"
print "(% class=\"sortHeader\" %)"
println "|= ID |= Tracker |= Status |= Thema "
  
root.issues.each() { issue -&gt;
  println "| [[#${issue.id}&gt;&gt;url:$ticketRedmine/${issue.id}|]] | {{{ ${issue.tracker.name} }}} | {{{ ${issue.status.name} }}} | {{{ ${issue.subject} }}}"
}

} catch( Exception e ){
  println "Something went wrong. Please contact the developer."
  def exceptionMsg = "$e".replaceAll(redmineKeyValue, redmineKeyValueMsg)
  print "{{error}} {{{ $exceptionMsg }}} {{/error}}"
}



{{/groovy}}</code>
