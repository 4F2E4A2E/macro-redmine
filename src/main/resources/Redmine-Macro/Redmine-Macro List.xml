$xwiki.ssfx.use("js/xwiki/table/table.css")
$xwiki.jsfx.use("js/xwiki/table/tablefilterNsort.js", true)
{{/velocity}}

{{groovy}}

import groovy.json.*

def wikiname = doc.getDocument().getWikiName()
def customObject = xwiki.getDocument("$wikiname:Redmine-Macro.RedmineMacroConfiguration").getObject("$wikiname:Redmine-Macro.RedmineMacroConfigurationClass")

if(null == customObject){
  wikiname = "xwiki"
  customObject = xwiki.getDocument("$wikiname:Redmine-Macro.RedmineMacroConfiguration").getObject("$wikiname:Redmine-Macro.RedmineMacroConfigurationClass")
}

def redmineKey = "key=".concat(customObject.getProperty("redmineUserApiKey").value)
def defaultUrl = customObject.getProperty("redmineUrl").value

try {

	def paramUrl = "$xcontext.macro.params.url".replaceAll('issues', 'issues.json')

	def url = ""
	if(paramUrl.contains("?")){
		url = paramUrl + "&amp;" + redmineKey
	}else{
		url = paramUrl + "?" + redmineKey
	}

	def root = new JsonSlurper().parseText(url.toURL().text)

	println "(% class=\"sortable filterable doOddEven\" id=\"ticketListRedmine\" %)"
	print "(% class=\"sortHeader\" %)"
	println "|= ID |= Tracker |= Status |= Thema "

	root.issues.each() { issue -&gt;
		if("5".equalsIgnoreCase("${issue.status.id}")) {
			println "| --[[#${issue.id}&gt;&gt;url:$defaultUrl/issues/${issue.id}]]-- | --{{{ ${issue.tracker.name} }}}-- | --{{{ ${issue.status.name} }}}-- | --{{{ ${issue.subject} }}}--"
		}else {
			println "| [[#${issue.id}&gt;&gt;url:$defaultUrl/issues/${issue.id}]] | {{{ ${issue.tracker.name} }}} | {{{ ${issue.status.name} }}} | {{{ ${issue.subject} }}}"
		}
	}

} catch( Exception e ){
	println "Something went wrong. Please contact the developer."
	println "{{error}} {{{ $e }}} {{/error}}"
}

